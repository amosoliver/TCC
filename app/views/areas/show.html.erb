<section id="services" class="services section-bg">
  <div class="container" data-aos="fade-up">

    <div class="section-title">
      <h2><%= @area.descricao %></h2> <!-- Exibe o area_id no título -->
    </div>

    <div class="row">
      <% @especialidades.each do |especialidade| %>
        <div class="col-xl-3 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
          <div class="icon-box">
            <div class="icon"><i class="bx bxl-dribbble"></i></div>
            <h4><a href="<%= especialidade_path(especialidade) %>"><%= especialidade.nome %></a></h4>
            <p><%= especialidade.descricao %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<%= link_to "New especialidade", new_especialidade_path, class: 'btn btn-primary' %> <!-- Adicionei uma classe para estilizar o botão -->
