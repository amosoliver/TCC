
<%= form_with(model: area, local: true, class: "centered-form") do |form| %>
  <% if area.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(area.errors.count, "error") %> prohibited this area from being saved:</h2>
      <ul>
        <% area.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row justify-content-center">

    <div class="col-md-12">
      <div class="form-group">
        <%= form.label :nome, class: "form-label" %>
        <%= form.text_field :nome, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-12">
      <div class="form-group">
        <%= form.label :descricao, class: "form-label" %>
        <%= form.text_field :descricao, class: "form-control" %>
      </div>
    </div>

  </div>

  <div class="form-group mt-3">
    <div class="d-flex justify-content-between">
      <div>
        <%= link_to "<i class='fas fa-arrow-left'></i>".html_safe, areas_path, class: "btn btn-secondary" %>
      </div>
      <div>
        <%= form.submit "Salvar", class: "btn btn-primary me-2" %>
      </div>
    </div>
  </div>
<% end %>
