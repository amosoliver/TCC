<section id="services" class="services section-bg">
  <div class="container" data-aos="fade-up">
    <div class="section-title">
      <h2>Agendamentos</h2>
    </div>

    <div class="row">
      <% @agendamentos.each do |data, agendamentos| %>
        <div class="col-xl-3 col-md-6 d-flex align-items-stretch mb-3" data-aos="zoom-in" data-aos-delay="100">
          <div class="icon-box-agendamento">
            <h4><%= data.strftime("%d/%m/%Y") %></h4> <!-- Cabeçalho para a data -->
            <% agendamentos.each do |agendamento| %>
              <p>
                <strong><%= current_user.consultor? ? "Consultor:" : "Cliente:" %></strong> 
                <%= current_user.consultor? ? agendamento.consultor&.nome : agendamento.cliente.nome %>
              </p>
              <p>
                <strong>Horário:</strong> 
                <%= agendamento.hora_inicio.strftime("%H:%M") %> - 
                <%= agendamento.hora_fim.strftime("%H:%M") %>
              </p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="text-center mt-4">
      <%= link_to "Novo Agendamento", new_agendamento_path, class: 'btn btn-primary' %>
    </div>
  </div>
</section>
