<%= form_with(model: user, url: usuarios_path) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% user.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email, required: true %>
  </div>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password, required: true %>
  </div>

  <div>
    <%= form.label :password_confirmation, style: "display: block" %>
    <%= form.password_field :password_confirmation, required: true %>
  </div>

  <div>
    <%= form.label :consultor, style: "display: block" %>
    <%= form.check_box :consultor %>
  </div>

  <div>
    <%= form.label :especialidade_id, style: "display: block" %>
    <%= form.number_field :especialidade_id %>
  </div>

  <div>
    <%= form.label :cidade_id, style: "display: block" %>
    <%= form.number_field :cidade_id %>
  </div>

  <div>
    <%= form.submit "Create User" %>
  </div>
<% end %>
