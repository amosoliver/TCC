<section id="services" class="services section-bg">
  <div class="container" data-aos="fade-up">
    <div class="section-title text-center">
      <h2>logar</h2> <!-- Título do formulário -->

      <div class="row justify-content-center">
        <div class="col-md-4"> <!-- Ajuste a largura conforme necessário -->
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3"> <!-- Adiciona margem inferior -->
              <%= f.label :email, class: "form-label" %> <!-- Adiciona a classe form-label para estilização -->
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="mb-3"> <!-- Adiciona margem inferior -->
              <%= f.label :password, class: "form-label" %> <!-- Adiciona a classe form-label para estilização -->
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <div class="actions text-end"> <!-- Adicionando a classe 'text-end' -->
              <%= f.submit "Entrar", class: "btn btn-primary" %> <!-- Adicionei uma classe para o botão também -->
            </div>
          <% end %>

          <%= render "devise/shared/links" %> <!-- Mantém o render para links do Devise -->
        </div>
      </div>
    </div>
  </div>
</section>
