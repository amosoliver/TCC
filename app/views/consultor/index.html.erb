<section id="services" class="services section-bg">
  <div class="container" data-aos="fade-up">
    <div class="section-title">
      <h2>Consultores</h2>
    </div>

    <div class="row">
      <% @consultores.each do |consultor| %>
        <div class="col-xl-3 col-md-6 d-flex align-items-stretch mb-3" data-aos="zoom-in" data-aos-delay="100">
          <div class="icon-box">
            <h4><a href="<%= consultor_path(consultor) %>"><%= consultor.nome %></a></h4>
            <p><strong>Email:</strong> <%= consultor.email %></p>
            <p><strong>Consultor:</strong> <%= consultor.consultor ? 'Sim' : 'Não' %></p>
            
            <% if consultor.consultor %>
              <p><strong>Especialidade:</strong> <%= consultor.especialidade.nome %></p>
            <% end %>
            
            <p><strong>Cidade:</strong> <%= consultor.cidade.descricao %></p>
            <p><strong>Data de Criação:</strong> <%= consultor.created_at.strftime("%d/%m/%Y") %></p>
            <p><strong>Última Atualização:</strong> <%= consultor.updated_at.strftime("%d/%m/%Y") %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
