<section id="team" class="team section-bg">
  <div class="container" data-aos="fade-up">
    <div class="section-title">
      <h2>Consultores</h2>
    </div>

    <% if @consultores.any? %>
      <div class="row">
        <% @consultores.each do |consultore| %>
          <div class="col-lg-6">
            <div class="member d-flex align-items-start" data-aos="zoom-in" data-aos-delay="100">
               <div class="pic">
              <img src="/img/74472.png" class="img-fluid" alt="Imagem de Usuário">
             </div>
              <div class="member-info">
                <h4><%= link_to consultore.nome, consultor_path(consultore) %></h4> <!-- Link para a rota show -->
                <span><%= consultore.especialidade.nome %></span>
                <p><%= consultore.descricao %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p>Não há consultores disponíveis para esta especialidade.</p>
    <% end %>
  </div>
</section>
